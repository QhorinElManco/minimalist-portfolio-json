---
import Section from "../Section.astro";
import {work} from "@cv";
---
<Section title="Experiencia">
    <ul>
        {work.map(({startDate, endDate, name, position, summary, url}) => {
            const startYear = new Date(startDate).getFullYear();
            const endYear = endDate ? new Date(endDate).getFullYear() : "Present";
            const period = `${startYear} - ${endYear}`;
            return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>
                                        <a href={url} target="_blank" title={`Visitar ${name}`}>
                                            {name}
                                        </a>
                                    </h3>
                                    <h4>{position}</h4>
                                </div>
                                <time>
                                    {period}
                                </time>
                            </header>
                            <footer>
                                <p>{summary}</p>
                            </footer>
                        </article>
                    </li>)
        })}
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    article h3 {
        font-weight: 500;
        color: #111
    }

    article h4 {
        font-weight: 400;
        color: #333;
    }

    article a {
        color: #111;
    }

    article a:hover {
        text-decoration: underline;
    }

    time {
        font-size: .85em;
        color: #666;
        min-width: 102px;
    }

    @media (width <= 700px) {
        time {
            text-align: right;
        }
    }
</style>